@model GorevUpdateDto
@{
    ViewData["Title"] = "GuncelleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="GuncelleGorev" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad</label>
        <span class="text-danger" asp-validation-for="@Model.Ad"></span>
        <input class="form-control" type="text" asp-for="@Model.Ad" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <span class="text-danger" asp-validation-for="@Model.Aciklama"></span>
        <textarea class="form-control" asp-for="@Model.Aciklama"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet durumu seçiniz</label>
        <span class="text-danger" asp-validation-for="@Model.AciliyetId"></span>
        <select class="form-control" asp-for="@Model.AciliyetId" asp-items="ViewBag.Aciliyetler" )">
            <option hidden value="-1">
                Seçiniz
            </option>
        </select>
    </div>
    <button class="btn btn-sm btn-info" type="submit"><i class="fas fa-save mr-2"></i>Kaydet</button>
</form>
@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}