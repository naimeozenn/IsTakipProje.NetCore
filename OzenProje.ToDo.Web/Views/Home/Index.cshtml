@model AppUserSignInDto 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}
<form asp-action="GirisYap" method="post" class="mt-5 w-25 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="@Model.UserName">Kullanıcı Adı</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Parola</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <a asp-action="KayıtOl" class="btn btn-warning btn-sm">Kayıt Ol </a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />

</form>